doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        //-meta(name="viewport", content="width=device-width, initial-scale=1")
        link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
        link(rel='stylesheet', href='/bootstrap/css/bootstrap-theme.css')
        title= "bootstrapTest"
        meta(name="viewport", content="initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=yes")
        script(src='/javascripts/angular.js')
        script(src='/javascripts/ui-bootstrap-tpls-0.12.0.js')
    body

        div() &nbsp;
        div(class='text-center') ——— pyramide (same as container-fluid) ————
        div() &nbsp;

        -for (var i=0; i < 12; i++)
            div(class='col-xs-1 text-center modal-content') 1
        -for (var i=0; i < 6; i++)
            div(class='col-xs-2 text-center modal-content') 2
        -for (var i=0; i < 4; i++)
            div(class='col-xs-3 text-center modal-content') 3
        -for (var i=0; i < 3; i++)
            div(class='col-xs-4 text-center modal-content') 4
        -for (var i=0; i < 2; i++)
            div(class='col-xs-6 text-center modal-content') 6
        -for (var i=0; i < 1; i++)
            div(class='col-xs-12 text-center modal-content') 12

        div() &nbsp;
        div(class='text-center') ——— pyramide in container ———
        div() &nbsp;

        div(class='container')
            div(class='row')
                -for (var i=0; i < 12; i++)
                    div(class='col-xs-1 text-center modal-content') 1
                -for (var i=0; i < 6; i++)
                    div(class='col-xs-2 text-center modal-content') 2
                -for (var i=0; i < 4; i++)
                    div(class='col-xs-3 text-center modal-content') 3
                -for (var i=0; i < 3; i++)
                    div(class='col-xs-4 text-center modal-content') 4
                -for (var i=0; i < 2; i++)
                    div(class='col-xs-6 text-center modal-content') 6
                -for (var i=0; i < 1; i++)
                    div(class='col-xs-12 text-center modal-content') 12

        div() &nbsp;
        div(class='text-center') ——— offset ———
        div() &nbsp;

        div(class='container')
            div(class='row')
                div(class='col-xs-3 text-center modal-content') 3
                div(class='col-xs-3 text-center modal-content') 3

                div(class='col-xs-3 col-xs-offset-3 text-center modal-content') <— offset

        div() &nbsp;
        div(class='text-center') ——— nesting (+nested container-fluid) ———
        div() &nbsp;

        div(class='container-fluid')
            div(class='row')
                div(class='col-xs-6 text-center modal-content')
                    div(class='container-fluid')
                        div(class='row')
                            div(class='col-xs-4 text-center modal-content') 4/2
                            div(class='col-xs-8 text-center modal-content') 8/2
                div(class='col-xs-6 text-center modal-content')
                    div(class='row')
                        div(class='col-xs-5 text-center modal-content') 5/2
                        div(class='col-xs-3 text-center modal-content') 3/2
                        div(class='col-xs-4 text-center modal-content') 4/2

        div() &nbsp;
        div(class='text-center') —————————————————————————————
        div() &nbsp;

        div(class='container')
            div(class='row')
                div(class='col-xs-9')
                    input(type='number', class='form-control ', placeholder='your id')
                div(class='col-xs-3')
                    a(class='btn btn-success center-block') Search

        div(class='container')
            div(class='row')
                div(class='col-xs-6') Hi
                div(class='col-xs-6') there!
